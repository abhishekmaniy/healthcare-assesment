generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String  @id @default(cuid())
  auth0Id String  @unique @map("auth0_id")
  name    String
  email   String  @unique
  picture String?
  shifts    Shift[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Shift {
  id           String    @id @default(cuid())
  clockIn      DateTime
  clockOut     DateTime?
  clockInLat   Float
  clockInLng   Float
  clockOutLat  Float?
  clockOutLng  Float?
  clockInNote  String?
  clockOutNote String?
  userId       String
  user         User      @relation(fields: [userId], references: [id])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
